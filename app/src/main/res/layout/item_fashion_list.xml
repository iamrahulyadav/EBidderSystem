<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/setting_Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/llayout_fashion_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp">

                <ImageView
                    android:id="@+id/img_fashion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_350sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mentshirt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom">

                    <ImageView
                        android:id="@+id/llayout_addtocart_product"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/llayout_like_product"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@mipmap/ic_nonactive_like" />

                 <ImageView
                        android:id="@+id/llayout_like_product"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@mipmap/ic_nonactive_like" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="10% OFF "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_dark" />

            <TextView
                android:id="@+id/txt_fashion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"

                android:paddingLeft="@dimen/_10sdp"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/txt_fashion1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="310.00 AED"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fashidfgon1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="350.00 AED"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fashion2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="FREE SHIPPING"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>