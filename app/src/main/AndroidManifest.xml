<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.archi.ebiddersystem">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SpalshActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.loginmodule.RegistrationActivity" />
        <activity
            android:name=".activities.loginmodule.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activities.loginmodule.ForgotPasswordActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.loginmodule.SignupActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.loginmodule.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.fashsion.FashionListActivity"
            android:label="@string/title_activity_fashion_list"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>